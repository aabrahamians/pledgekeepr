

<body>
   <%= form_for :session, :url => sessions_path do |u| %>
            <div class="small-6  small-offset-3 columns">
                <h1 >Log In</h1>

                <form role="form">
                    <div class="form-group">
                    <%= u.text_field :email, :placeholder => "Email"  %>
                    </div>
                    <div class="form-group">
                      <%= u.password_field :password, :placeholder => "Password" %>
                    </div>
                    <div class="form-group">
                        <%= u.submit "Login", class: 'button success' %>
                    </div>
                </form>

                <div class="divider"></div>
                <div>
                    <%=link_to "Not a member yet?", new_user_path, class: 'button tiny'%>
                </div>
            </div>
     <% end %>
</body>



