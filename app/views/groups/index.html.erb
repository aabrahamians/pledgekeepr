
<p class="adminwelcomebanner"><%= current_user.name %>'s managed groups</p>


<div class="small-6 column">

		<% @groups.each do |g| %>
	<div class="groupbox">

			<%= link_to group_path(g) do %>
				<p class="groupname"><%= g.name %></p>

	    <%end%>
	    

<span data-tooltip class="has-tip" title="Invite Pledges to your group using this invitaion code"><p id="invitationcode"><%= g.id %></p></span>


		<div class="groupboxmembers">
				
				<div class="members">
					<% g.pledges.each do |user| %>
						<li><%= user.name %></li>
					<% end %>
	      </div>
					
		</div>
	</div>
				<% end %>
	<div class="groupbox" id="newgroup">
		<a href="#" data-reveal-id="myModal">Create New Group</a>
		<div id="myModal" class="reveal-modal" data-reveal>
				<%= form_for Group.new do |u| %>
		  <div class="row">
          <div class="small-6  small-offset-3 columns">
              <h1><strong>Let's get started</strong></h1>

              <form role="form">
                  <div class="form-group">
                  <%= u.text_field :name, :placeholder => " Name"  %>
                  </div>
								<hr>
                 
                  		
 									<div class="form-group">
                      <%= u.submit "Create", class: 'button success' %>
                  </div>
                  	

              </form>
          </div>
			</div>
			<% end %>
		  	<a class="close-reveal-modal"></a>
		</div>
	</div>

</div>





	